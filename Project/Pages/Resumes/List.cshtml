@page
@model Project.Pages.Resumes.ListModel
@{
}
<p>
    <a class="btn btn-secondary" asp-page="./Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resumes[0].grade)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Resumes)
        {
            <tr>
                <td>
                    <a class="link-dark" asp-page="Index" asp-route-Id="@item.ID">
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @Html.DisplayFor(modelItem => item.LastName)
                    </a>
                </td>
                <td style="color:palevioletred">
                    @Html.DisplayFor(modelItem => item.grade)
                </td>
                <td>
                    <a class="link-secondary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="link-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
